<div class="section-content settings-section">
  <div class="settings-container">
    <h1>Settings</h1>

    <!-- Theme Mode -->
    <section class="settings-block">
      <h2>Theme</h2>
      <div class="theme-switch-wrapper">
        <span class="slider-icon"><i class="fas fa-sun"></i></span>
        <label class="theme-switch">
          <input type="checkbox" id="settings-theme-toggle">
          <span class="slider"></span>
        </label>
        <span class="slider-icon"><i class="fas fa-moon"></i></span>
      </div>
      <p class="hint">Switch between Light and Dark theme.</p>
    </section>

    <!-- Language (placeholder) -->
    <section class="settings-block">
      <h2>Language</h2>
      <select id="settings-language" class="settings-select" disabled>
        <option value="en" selected>English</option>
        <option value="es">Spanish</option>
        <option value="fr">French</option>
      </select>
      <p class="hint">Language selection is not functional yet.</p>
    </section>

    <!-- Week start order -->
    <section class="settings-block">
      <h2>Week start</h2>
      <select id="settings-weekstart" class="settings-select">
        <option value="sunday">Sunday - Saturday</option>
        <option value="monday">Monday - Sunday</option>
        <option value="system" selected>System default</option>
      </select>
      <p class="hint">Choose how your week is ordered in the calendar.</p>
    </section>
  </div>
</div>