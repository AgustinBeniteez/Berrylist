<div class="section-content settings-section">
  <div class="settings-container">
    <h1><i class="fas fa-cog"></i> <span data-i18n="settings.title">Settings</span></h1>

    <div class="settings-grid">
      <!-- Theme Mode -->
      <section class="settings-block">
        <h2><i class="fas fa-palette"></i> <span data-i18n="settings.appearance">Appearance</span></h2>
        <div class="theme-switch-wrapper">
          <span class="slider-icon"><i class="fas fa-sun"></i></span>
          <label class="theme-switch" for="settings-theme-toggle">
            <input type="checkbox" id="settings-theme-toggle">
            <span class="slider"></span>
          </label>
          <span class="slider-icon"><i class="fas fa-moon"></i></span>
        </div>
        <p class="hint"><i class="fas fa-info-circle"></i> <span data-i18n="settings.themeHint">Switch between Light and Dark theme for better visual comfort.</span></p>
      </section>

      <!-- Language (placeholder) -->
      <section class="settings-block">
        <h2><i class="fas fa-globe"></i> <span data-i18n="settings.language">Language</span></h2>
        <div class="select-wrapper">
           <select id="settings-language" class="settings-select">
             <option value="en" data-i18n="settings.languages.en">English</option>
             <option value="es" data-i18n="settings.languages.es">Español</option>
             <option value="fr" data-i18n="settings.languages.fr">Français</option>
           </select>
         </div>
        <p class="hint"><i class="fas fa-info-circle"></i> <span data-i18n="settings.languageHint">Select your preferred language for the interface.</span></p>
      </section>

      <!-- Week start order -->
      <section class="settings-block">
        <h2><i class="fas fa-calendar-alt"></i> <span data-i18n="settings.calendar">Calendar</span></h2>
        <div class="select-wrapper">
           <select id="settings-weekstart" class="settings-select">
             <option value="sunday" data-i18n="settings.weekStart.sunday">Sunday - Saturday</option>
             <option value="monday" data-i18n="settings.weekStart.monday">Monday - Sunday</option>
             <option value="system" selected data-i18n="settings.weekStart.system">System default</option>
           </select>
         </div>
        <p class="hint"><i class="fas fa-info-circle"></i> <span data-i18n="settings.calendarHint">Choose how your week is ordered in the calendar view.</span></p>
      </section>

      <!-- Account Section -->
      <section class="settings-block">
        <h2><i class="fas fa-user"></i> <span data-i18n="settings.account">Account</span></h2>
        
        <!-- User Info Display -->
        <div id="userAccountInfo" class="user-account-info" style="display: none;">
          <div class="user-info-item">
            <i class="fas fa-user account-icon"></i>
            <div class="user-info-content">
              <label class="info-label" data-i18n="settings.name">Name:</label>
              <span id="userDisplayName" class="user-info-value">-</span>
            </div>
          </div>
          
          <div class="user-info-item">
            <i class="fas fa-envelope account-icon"></i>
            <div class="user-info-content">
              <label class="info-label" data-i18n="settings.email">Email:</label>
              <span id="userDisplayEmail" class="user-info-value">-</span>
            </div>
          </div>
          
          <div class="account-actions">
            <button id="deleteAccountBtn" class="delete-account-btn">
              <i class="fas fa-trash-alt"></i>
              <span data-i18n="settings.deleteAccount">Delete Account</span>
            </button>
          </div>
        </div>
        
        <!-- Not logged in message -->
        <div id="notLoggedInMessage" class="not-logged-in">
          <p class="hint"><i class="fas fa-info-circle"></i> <span data-i18n="settings.loginRequired">Please log in to view account information.</span></p>
        </div>
      </section>




    </div>
  </div>

  <!-- Delete Account Confirmation Modal -->
  <div id="deleteAccountModal" class="delete-modal" style="display: none;">
    <div class="delete-modal-content">
      <div class="delete-modal-header">
        <h2><i class="fas fa-exclamation-triangle"></i> <span data-i18n="settings.deleteAccountTitle">Delete Account</span></h2>
        <span class="delete-modal-close" id="deleteModalClose">&times;</span>
      </div>
      
      <div class="delete-modal-body">
        <div class="warning-message">
          <i class="fas fa-warning"></i>
          <p><strong data-i18n="settings.deleteWarning">Warning: This action cannot be undone!</strong></p>
          <p data-i18n="settings.deleteDescription">Deleting your account will permanently remove all your data, including:</p>
          <ul>
            <li data-i18n="settings.deleteItem1">All your calendar events and tasks</li>
            <li data-i18n="settings.deleteItem2">Personal settings and preferences</li>
            <li data-i18n="settings.deleteItem3">Account information and profile</li>
          </ul>
        </div>
        
        <div class="confirmation-input">
          <label for="deleteConfirmInput" data-i18n="settings.typeDelete">Type "DELETE" to confirm:</label>
          <input type="text" id="deleteConfirmInput" class="delete-confirm-input" placeholder="DELETE">
        </div>
      </div>
      
      <div class="delete-modal-footer">
        <button id="cancelDeleteBtn" class="cancel-btn">
          <i class="fas fa-times"></i>
          <span data-i18n="settings.cancel">Cancel</span>
        </button>
        <button id="confirmDeleteBtn" class="confirm-delete-btn" disabled>
          <i class="fas fa-trash-alt"></i>
          <span data-i18n="settings.confirmDelete">Delete Account</span>
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Data Management Scripts -->
<script src="/js/user-data-manager.js"></script>