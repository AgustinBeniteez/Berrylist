<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <%- include('../partials/head'); %>
  <link rel="stylesheet" href="/css/landing.css">
</head>
<body class="landing-page">
  <!-- Theme Switch eliminado de la landing page -->

  <!-- Header con navegación -->
  <header class="landing-header">
    <div class="menu-toggle">
      <i class="fas fa-bars"></i>
    </div>
    <nav class="landing-nav">
      <ul>
        <li><a href="/dashboard" data-i18n="navigation.home">Home</a></li>
        <li><a href="/dashboard" data-section="calendar" data-i18n="navigation.calendarSection">Calendar Section</a></li>
        <li><a href="/dashboard" data-section="work" data-i18n="navigation.workSection">Work Section</a></li>
        <li><a href="/dashboard" data-section="study" data-i18n="navigation.studySection">Study Section</a></li>
        <li><a href="/dashboard" data-section="leisure" data-i18n="navigation.leisureSection">Leisure Section</a></li>
      </ul>
    </nav>
    <div class="auth-buttons">
      <a href="#" class="login-btn" data-i18n="landing.login">Log In</a>
      <a href="/dashboard" class="get-started-btn" data-i18n="landing.getStarted">Dashboard</a>
    </div>
  </header>

  <!-- Hero Section con imágenes de fondo -->
  <section class="hero-collage">
    <div class="collage-container">
      <div class="collage-image large" id="image1"></div>
      <div class="collage-image medium" id="image2"></div>
      <div class="collage-image small" id="image3"></div>
      <div class="collage-image medium" id="image4"></div>
    </div>
    <div class="blur-overlay"></div>
    <div class="hero-content">
      <div class="hero-title-container">
        <h1 class="hero-title">Berrylist</h1>
        <img src="/img/Berrylist-logo.webp" alt="Berrylist Logo" class="hero-logo">
      </div>
      <a href="/dashboard" class="cta-button" data-i18n="landing.goSite">Go site</a>
    </div>
  </section>

  <!-- Características Principales -->
  <section class="main-features">
    <div class="container">
      <h2 class="hero-title" data-i18n="landing.ourFeatures">Our Features</h2>
      <div class="features-container">

        <div class="feature-box">
          <div class="feature-box-header header-trabajo"></div>
          <div class="feature-box-content">
            <div class="feature-icon"><i class="fas fa-briefcase"></i></div>
            <h3 data-i18n="navigation.workSection">Work Section</h3>
            <ul>
              <li data-i18n="landing.workScheduleManagement">Work schedule management</li>
              <li data-i18n="landing.taskProjectTracking">Task and project tracking</li>
              <li data-i18n="landing.meetingOrganization">Meeting organization</li>
            </ul>
          </div>
        </div>
        <div class="feature-box">
          <div class="feature-box-header header-estudio"></div>
          <div class="feature-box-content">
            <div class="feature-icon"><i class="fas fa-book"></i></div>
            <h3 data-i18n="navigation.studySection">Study Section</h3>
            <ul>
              <li data-i18n="landing.classSchedules">Class schedules</li>
              <li data-i18n="landing.examDates">Exam dates</li>
              <li data-i18n="landing.studySessionPlanning">Study session planning</li>
            </ul>
          </div>
        </div>
        <div class="feature-box">
          <div class="feature-box-header header-ocio"></div>
          <div class="feature-box-content">
            <div class="feature-icon"><i class="fas fa-gamepad"></i></div>
            <h3 data-i18n="navigation.leisureSection">Leisure Section</h3>
            <ul>
              <li data-i18n="landing.moviesToWatch">Movies to watch</li>
              <li data-i18n="landing.tvShowsTracking">TV shows tracking</li>
              <li data-i18n="landing.gamesToPlay">Games to play</li>
              <li data-i18n="landing.favoriteSongs">Favorite songs</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- La sección de Perfil Personal ha sido eliminada -->

  <%- include('../partials/footer'); %>

  <script src="/js/main.js"></script>
  <script src="/js/nav-section-links.js"></script>
  <script src="/js/theme-switcher.js"></script>
  <script>
    // Forzar modo oscuro en la landing page solo si el usuario no ha elegido un tema
    document.addEventListener('DOMContentLoaded', () => {
      // Verificar si el usuario ha seleccionado un tema manualmente
      const userSelectedTheme = getCookie('userTheme');
      
      if (!userSelectedTheme) {
        // Solo forzar el tema oscuro si el usuario no ha elegido uno
        document.documentElement.setAttribute('data-theme', 'dark');
        // Usar la función setCookie definida en theme-switcher.js
        if (typeof setCookie === 'function') {
          setCookie('theme', 'dark', 730);
          // No establecemos userTheme para no sobrescribir la preferencia del usuario
        }
      }
      // No se manipula el botón de cambio de tema ya que fue eliminado de esta página
    });
  </script>
</body>
</html>