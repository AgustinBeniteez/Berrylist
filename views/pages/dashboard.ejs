<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <%- include('../partials/head'); %>
  <link rel="stylesheet" href="/css/dashboard.css">
  <script>
    // Variable para almacenar la secci√≥n activa si se proporciona desde el servidor
    const serverActiveSection = '<%= typeof activeSection !== "undefined" ? activeSection : "" %>';
  </script>
</head>
<body class="dashboard-page">
  <!-- Mobile Toggle Button -->
  <div class="mobile-toggle-wrapper">
    <button id="sidebar-toggle" class="sidebar-toggle-btn">
      <i class="fas fa-bars"></i>
    </button>
  </div>

  <div class="dashboard-layout">
    <!-- Sidebar Navigation -->
    <div class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <img src="/img/Berrylist-logo.webp" alt="Berrylist Logo" class="sidebar-logo">
        <h2>Berrylist</h2>
      </div>
      
      <ul class="sidebar-nav">
        <li><a href="#" class="nav-btn" data-section="calendar"><i class="fas fa-calendar-alt"></i> <span data-i18n="navigation.calendar">Calendar</span></a></li>
        <li><a href="#" class="nav-btn" data-section="work"><i class="fas fa-briefcase"></i> <span data-i18n="navigation.work">Work</span></a></li>
        <li><a href="#" class="nav-btn" data-section="study"><i class="fas fa-book"></i> <span data-i18n="navigation.study">Study</span></a></li>
        <li><a href="#" class="nav-btn" data-section="leisure"><i class="fas fa-gamepad"></i> <span data-i18n="navigation.leisure">Leisure</span></a></li>
      </ul>
      
      <!-- Settings and Home Button in sidebar footer -->
      <div class="sidebar-footer">
        <a href="#" class="settings-button nav-btn" data-section="settings">
          <i class="fas fa-cog"></i>
          <span data-i18n="navigation.settings">Settings</span>
        </a>
        <a href="/" class="home-button">
          <i class="fas fa-home"></i>
          <span data-i18n="navigation.home">Home</span>
        </a>
      </div>
    </div>

    <!-- Content Area -->
    <div class="content-area">
      <main id="main-content">
        <!-- Default content with cards -->
        
        <div class="section-cards">
          <a href="/dashboard/calendar" class="card-link">
            <div class="card" data-section="calendar">
              <div class="card-image">
                <img src="/img/landingpage/calendar.webp" alt="Calendar" class="card-img">
                <div class="card-content">
                  <i class="fas fa-calendar-alt card-icon"></i>
                  <h3 data-i18n="navigation.calendar">CALENDAR</h3>
                </div>
              </div>
            </div>
          </a>

          <a href="/dashboard/work" class="card-link">
            <div class="card" data-section="work">
              <div class="card-image">
                <img src="/img/landingpage/notepad.webp" alt="Work" class="card-img">
                <div class="card-content">
                  <i class="fas fa-briefcase card-icon"></i>
                  <h3 data-i18n="navigation.work">WORK</h3>
                </div>
              </div>
            </div>
          </a>
          
          <a href="/dashboard/study" class="card-link">
            <div class="card" data-section="study">
              <div class="card-image">
                <img src="/img/landingpage/study.webp" alt="Study" class="card-img">
                <div class="card-content">
                  <i class="fas fa-graduation-cap card-icon"></i>
                  <h3 data-i18n="navigation.study">STUDY</h3>
                </div>
              </div>
            </div>
          </a>
          
          <a href="/dashboard/leisure" class="card-link">
            <div class="card" data-section="leisure">
              <div class="card-image">
                <img src="/img/landingpage/series.webp" alt="Leisure" class="card-img">
                <div class="card-content">
                  <i class="fas fa-gamepad card-icon"></i>
                  <h3 data-i18n="navigation.leisure">LEISURE</h3>
                </div>
              </div>
            </div>
          </a>
        </div>
      </main>
    </div>
  </div>
  
  <%- include('../partials/footer'); %>

  <script src="/js/main.js"></script>
  <script src="/js/theme-switcher.js"></script>
  <script src="/js/dashboard.js"></script>
  <script src="/js/nav-section-links.js"></script>
  <script src="/js/calendar.js"></script>
  <script src="/js/settings.js"></script>
</body>
</html>