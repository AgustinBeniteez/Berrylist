<!DOCTYPE html>
<html lang="es" data-theme="dark">
<head>
  <%- include('../partials/head'); %>
  <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body class="dashboard-page">
  <!-- Mobile Toggle Button -->
  <div class="mobile-toggle-wrapper">
    <button id="sidebar-toggle" class="sidebar-toggle-btn">
      <i class="fas fa-bars"></i>
    </button>
  </div>

  <div class="dashboard-layout">
    <!-- Sidebar Navigation -->
    <div class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <img src="/img/Berrylist-logo.webp" alt="Berrylist Logo" class="sidebar-logo">
        <h2>Berrylist</h2>
      </div>
      
      <ul class="sidebar-nav">
        <li><a href="#" class="nav-btn" data-section="calendar"><i class="fas fa-calendar-alt"></i> <span>Calendar</span></a></li>
        <li><a href="#" class="nav-btn" data-section="work"><i class="fas fa-briefcase"></i> <span>Work</span></a></li>
        <li><a href="#" class="nav-btn" data-section="study"><i class="fas fa-book"></i> <span>Study</span></a></li>
        <li><a href="#" class="nav-btn" data-section="leisure"><i class="fas fa-gamepad"></i> <span>Leisure</span></a></li>
      </ul>
      
      <!-- Home Button in sidebar footer -->
      <div class="sidebar-footer">
        <!-- Theme Switch moved to just above home button -->
        <div class="theme-switch-wrapper">
          <span class="slider-icon"><i class="fas fa-sun"></i></span>
          <label class="theme-switch">
            <input type="checkbox">
            <span class="slider"></span>
          </label>
          <span class="slider-icon"><i class="fas fa-moon"></i></span>
        </div>
        <a href="/" class="home-button">
          <i class="fas fa-home"></i>
          <span>Inicio</span>
        </a>
      </div>
    </div>

    <!-- Content Area -->
    <div class="content-area">
      <main id="main-content">
        <!-- Default content with cards -->
        
        <div class="section-cards">
          <div class="card" data-section="calendar">
            <div class="card-image">
              <img src="/img/landingpage/calendar.webp" alt="Calendar" class="card-img">
              <h3>CALENDAR</h3>
            </div>
          </div>

          <div class="card" data-section="work">
            <div class="card-image">
              <img src="/img/landingpage/notepad.webp" alt="Work" class="card-img">
              <h3>WORK</h3>
            </div>
          </div>
          
          <div class="card" data-section="study">
            <div class="card-image">
              <img src="/img/landingpage/study.webp" alt="Study" class="card-img">
              <h3>STUDY</h3>
            </div>
          </div>
          
          <div class="card" data-section="leisure">
            <div class="card-image">
              <img src="/img/landingpage/series.webp" alt="Leisure" class="card-img">
              <h3>LEISURE</h3>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
  
  <%- include('../partials/footer'); %>

  <script src="/js/main.js"></script>
  <script src="/js/theme-switcher.js"></script>
  <script src="/js/dashboard.js"></script>
  <script src="/js/nav-section-links.js"></script>
</body>
</html>